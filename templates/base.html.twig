<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Piazza Umarell {% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
            <link href="{{ asset('/static/app.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div id="app">
                <router-view></router-view>
            </div>
        {% endblock %}

        {% block javascripts %}
            <script lang="js">
                window.ROUTES = {{ routes.get() |
                json_encode(
                    constant('JSON_PRETTY_PRINT') b-or
                    constant('JSON_UNESCAPED_SLASHES')
                ) | raw }};

                window.GLOBALS = {{ globals.get() |
                json_encode(
                    constant('JSON_PRETTY_PRINT') b-or
                    constant('JSON_UNESCAPED_SLASHES')
                ) | raw
                }};
            </script>

            <script src="{{ asset('/static/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
